            <CheckBox Content="禁止广告进程运行" Height="40" Width="195" BorderBrush="Black" Background="White" Foreground="#FF333333" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="8" Padding="8"/>
            <CheckBox Content="对硬盘进行监测" Height="40" Width="195" BorderBrush="Black" Background="White" Foreground="#FF333333" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="8" Padding="8"/>
